---
interface Props {
  image: string;
  title: string;
  subtitle: string;
}

const { image, title, subtitle } = Astro.props;
---

{/* ------------------------------------------- HTML ------------------------------------------- */}

<div id="tile">
  <img src={image} />

  <div class="high-contrast-text">
    <p class="title">{title}</p>
    <p>{subtitle}</p>
  </div>
</div>

{/* ------------------------------------------- CSS -------------------------------------------- */}

<style>
  #tile {
    position: relative;
    width: 100%;
    aspect-ratio: 1 / 1;
    display: grid;
    background-color: var(--color-elevation-0);
    place-items: center;
    overflow: hidden;
    border-radius: 12px;
    box-shadow: 0 5px 20px -10px var(--color-shadow);

    & > div {
      text-align: center;
      backdrop-filter: blur(5px);
      padding: 1em;
      border-radius: 1em;

      & > .title {
        font-size: 130%;
        font-weight: 500;
        margin-bottom: 0.2em;
      }
    }

    & > img {
      position: absolute;
      inset: 0;
      opacity: 0.5;
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
  }
</style>
