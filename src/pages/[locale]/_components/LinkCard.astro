---
import { Icon } from "astro-icon/components";
interface Props {
  title: string;
  icon: string;
  subtitle: string;
  href: string;
  hidden?: boolean;
}

const { icon, subtitle, title, href, hidden } = Astro.props;
---

{/* ------------------------------------------- HTML ------------------------------------------- */}

<a href={href} class="pressable" hidden={hidden}>
  <Icon name={icon} />
  <div id="right">
    <p class="font-xl">{title}</p>
    <p class="font-s">{subtitle}</p>
  </div>
</a>

{/* ------------------------------------------- CSS -------------------------------------------- */}

<style>
  a:not([hidden]) {
    display: flex;
    place-items: center;
    gap: 1em;
    color: var(--color-base-1000);
    padding: 1.5em;
    border-radius: 0.75em;

    & > svg {
      width: clamp(1.5em, 6vw + 0.8em, 3em);
      height: clamp(1.5em, 6vw + 0.8em, 3em);
      flex-shrink: 0;
    }

    & > #right {
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      gap: 0.15em;
    }
  }
</style>
